# ========================================
# SISTEMA DE VENDAS - CONFIGURAÇÃO
# ========================================
# Desenvolvido por Pedro Mendes
# 
# Este arquivo contém todas as variáveis de ambiente
# necessárias para o funcionamento do sistema.
# 
# IMPORTANTE: Copie este arquivo para .env e configure
# com seus valores reais. Nunca commite o .env real!

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL=postgresql://usuario:senha@localhost:5432/sistema_vendas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistema_vendas
DB_USER=usuario
DB_PASSWORD=senha

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
JWT_SECRET=sua_chave_secreta_muito_segura_aqui
SESSION_SECRET=outra_chave_secreta_para_sessoes
BCRYPT_ROUNDS=12

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # 2h da manhã todos os dias

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
NOTIFICATION_SOUND_ENABLED=true
NOTIFICATION_SOUND_FILE=./assets/sounds/notification.mp3
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ========================================
CACHE_TTL=300 # 5 minutos
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000 # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
DEBUG=false
VITE_DEV_SERVER_PORT=5173
HOT_RELOAD_ENABLED=true
