{
  "name": "sistema-vendas-pedro",
  "version": "1.0.0",
  "type": "module",
  "description": "Sistema de gestão de vendas desenvolvido por Pedro Mendes - Controle de atendentes, vendas, metas e ranking gamificado",
  "main": "index.js",
  "scripts": {
    // ========================================
    // SCRIPTS DE DESENVOLVIMENTO
    // ========================================
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "dev:client": "vite",
    "dev:server": "cross-env NODE_ENV=development tsx --watch server/index.ts",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    
    // ========================================
    // SCRIPTS DE BUILD
    // ========================================
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:check": "tsc --noEmit",
    
    // ========================================
    // SCRIPTS DE PRODUÇÃO
    // ========================================
    "start": "cross-env NODE_ENV=production tsx --no-warnings server/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/server/index.js",
    "preview": "vite preview",
    
    // ========================================
    // SCRIPTS DE BANCO DE DADOS
    // ========================================
    "db:setup": "node database/scripts/setup-database.js",
    "db:migrate": "node database/scripts/apply-migrations.js",
    "db:seed": "node database/scripts/seed-database.js",
    "db:optimize": "node database/scripts/optimize-database.js",
    "db:health": "node database/scripts/database-health-check.js",
    "db:test": "node database/scripts/test-all-operations.js",
    "db:backup": "node database/scripts/backup-database.js",
    "db:restore": "node database/scripts/restore-database.js",
    "db:reset": "npm run db:backup && node database/scripts/reset-database.js",
    
    // ========================================
    // SCRIPTS DE TESTES
    // ========================================
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --reporter=verbose tests/integration/",
    "test:e2e": "playwright test",
    
    // ========================================
    // SCRIPTS DE QUALIDADE DE CÓDIGO
    // ========================================
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    
    // ========================================
    // SCRIPTS DE MANUTENÇÃO
    // ========================================
    "clean": "rimraf dist build coverage node_modules/.cache",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "update": "npm update && npm audit fix",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    
    // ========================================
    // SCRIPTS DE DEPLOY
    // ========================================
    "deploy:check": "npm run build:check && npm run test:run && npm run lint:check",
    "deploy:prepare": "npm run clean && npm run build && npm run test:run",
    "deploy:staging": "npm run deploy:prepare && echo 'Deploy para staging concluído'",
    "deploy:production": "npm run deploy:prepare && echo 'Deploy para produção concluído'",
    
    // ========================================
    // SCRIPTS DE DOCUMENTAÇÃO
    // ========================================
    "docs:generate": "typedoc --out docs/api src/",
    "docs:serve": "npx serve docs/api",
    "docs:build": "npm run docs:generate",
    
    // ========================================
    // SCRIPTS DE MONITORAMENTO
    // ========================================
    "monitor:start": "node utils/monitor.js",
    "monitor:logs": "tail -f logs/app.log",
    "monitor:health": "curl http://localhost:3000/api/health",
    
    // ========================================
    // SCRIPTS DE UTILITÁRIOS
    // ========================================
    "utils:show-structure": "node utils/show-structure.js",
    "utils:backup": "node utils/backup-manager.js",
    "utils:cleanup": "node utils/cleanup.js",
    
    // ========================================
    // SCRIPTS DE DESENVOLVIMENTO AVANÇADO
    // ========================================
    "dev:debug": "cross-env NODE_ENV=development DEBUG=* tsx server/index.ts",
    "dev:profile": "cross-env NODE_ENV=development tsx --prof server/index.ts",
    "dev:inspect": "cross-env NODE_ENV=development tsx --inspect server/index.ts",
    
    // ========================================
    // SCRIPTS DE PERFORMANCE
    // ========================================
    "perf:analyze": "npm run build && npx webpack-bundle-analyzer dist/stats.json",
    "perf:lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "perf:budget": "npx bundlesize"
  },
  "keywords": [
    "vendas",
    "gestão",
    "atendentes",
    "metas",
    "ranking",
    "react",
    "typescript",
    "postgresql",
    "gamificação",
    "dashboard",
    "relatórios"
  ],
  "author": "Pedro Mendes",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.83.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "express": "^4.18.2",
    "lucide-react": "^0.294.0",
    "memoize": "^10.1.0",
    "memoizee": "^0.4.17",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.60.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.4.19",
    "wouter": "^2.12.1",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.20.6",
    "esbuild": "^0.25.8",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  }
}
