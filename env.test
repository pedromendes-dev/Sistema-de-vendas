# ========================================
# SISTEMA DE VENDAS - TESTES
# ========================================
# Configurações específicas para ambiente de testes
# Desenvolvido por Pedro Mendes

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL=postgresql://test:test@localhost:5432/sistema_vendas_test
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistema_vendas_test
DB_USER=test
DB_PASSWORD=test

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=0
NODE_ENV=test
HOST=localhost

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
JWT_SECRET=test-secret-key-for-testing-only
SESSION_SECRET=test-session-secret-for-testing-only
BCRYPT_ROUNDS=4

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_DIR=./backups/test
BACKUP_RETENTION_DAYS=1
AUTO_BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 0 * * *

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=error
LOG_FILE=./logs/test.log
LOG_MAX_SIZE=1m
LOG_MAX_FILES=1

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ========================================
NOTIFICATION_SOUND_ENABLED=false
NOTIFICATION_SOUND_FILE=./assets/sounds/notification.mp3
EMAIL_NOTIFICATIONS_ENABLED=false

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ========================================
CACHE_TTL=10 # 10 segundos em testes
MAX_CONNECTIONS=10
REQUEST_TIMEOUT=5000
RATE_LIMIT_WINDOW=1000 # 1 segundo
RATE_LIMIT_MAX_REQUESTS=1000

# ========================================
# CONFIGURAÇÕES DE TESTES
# ========================================
TESTING=true
DEBUG=false
HOT_RELOAD_ENABLED=false
CORS_ORIGIN=http://localhost:5174
VITE_DEV_SERVER_PORT=5174

# ========================================
# CONFIGURAÇÕES DE COBERTURA
# ========================================
COVERAGE_ENABLED=true
COVERAGE_REPORTER=text,json,html
COVERAGE_THRESHOLD=80

# ========================================
# CONFIGURAÇÕES DE TIMEOUT
# ========================================
TEST_TIMEOUT=10000
HOOK_TIMEOUT=10000
